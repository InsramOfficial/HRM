@page
@model HRMS.Pages.Employee_Form.IndexModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!----======== CSS ======== -->
    <link href="~/css/employee-form.css" rel="stylesheet" />
    <!----===== Iconscout CSS ===== -->
    <link href="	https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" />
    <title>Responsive Regisration Form </title>

</head>
<body>
    <div class="container py-0 my-0">
        <header>Registration</header>
         
        <form method="post" asp-page="Index" asp-page-handler="Create">
            <div class="form first">
                <div class="details personal">
                    <span class="title">Personal Info</span>

                    <div class="fields">
                        <div class="input-field">
                            <label>Name*</label>
                            <input type="text" class="form-control" required name="name" placeholder="Name">
                        </div>

                        <div class="input-field">
                            <label>Father_Name*</label>
                            <input type="text" class="form-control" required name="Father_name" placeholder="Father Name">
                        </div>

                        <div class="input-field">
                            <label>Email*</label>
                            <input type="email" class="form-control" required name="Email" placeholder="e.g:John@gmail.com">
                        </div>

                        <div class="input-field">
                            <label>Other_Email</label>
                            <input type="email" class="form-control" required name="Other_Email" placeholder="e.g:John@gmail.com">
                        </div>

                        <div class="input-field">
                            <label>Gender*</label>
                            <select type="text" class="form-control" required name="Gender">
                                <option selected onsubmit="Gender">Male</option>
                                <option selected onsubmit="Gender">Female</option>
                            </select>
                        </div>

                        <div class="input-field">
                            <label>Cnic*</label>
                            <input type="text" class="form-control" required name="Cnic" placeholder="81202-...........">
                        </div>
                        <div class="input-field">
                            <label>Date_of_Birth*</label>
                            <input type="date" class="form-control" required name="Date_of_Birth" placeholder=" e.g: 12/12/2003">
                        </div>
                        <div class="input-field">
                            <label>Mobile_Number*</label>
                            <input type="tel" class="form-control" required name="Mobile_Number" placeholder="+92------------">
                        </div>
                      
                        <div class="input-field">
                            <label>OFFice_Number*</label>
                            <input type="tel" class="form-control" required name="Other_Mobile_Number" placeholder="+92------------">
                        </div>
                        <div class="input-field">
                            <label>Experience</label>
                            <textarea type="text" class="form-control" required name="experience" placeholder="Experience"></textarea>
                        </div>
                        <div class="input-field">
                            <label>Marital_status</label>
                            <select type="text"  class="form-control" required name="marital_status">
                                <option selected onsubmit="marital_status">Single</option>
                                <option selected onsubmit="marital_status" >Married</option>
                            </select>
                        </div>

                        <div class="input-field">
                            <label>Additional_information</label>
                            <textarea type="text" class="form-control" required name="additional_information" placeholder="Additional Info"></textarea>
                            
                        </div>
                        <div class="input-field">
                            <label>Domicile_district</label>
                            <input type="text" class="form-control" required name="domicile_district" placeholder="Domicile District">
                        </div>

                        <div class="input-field">
                            <label>Blood_group</label>
                            <input type="text" class="form-control" required name="blood_group" placeholder="B+">
                        </div>

                        <div class="input-field">
                            <label>Nationality</label>
                            <input type="text" class="form-control" required name="Nationality" placeholder="Pakistani">
                        </div>

                        <div class="input-field">
                            <label>Passport_Number</label>
                            <input type="text" class="form-control" required name="Passport_Number" placeholder="2394-3-434-34">
                        </div>
                        <div class="input-field">
                            <label class="form-label" for="customFile">Image</label>
                            <input type="file" class="form-control" id="customFile" required name="image " />
                           
                        </div>
                        <div class="input-field">
                            <label>Country</label>
                            <select type="text" class="form-control" required name="Country_id" asp-items="@(new SelectList(Model.c,"id","Name"))">
                            </select>
                        </div>
                        <div class="input-field">
                            <label>Religion</label>
                            <select type="text" class="form-control" required name="Religion_id" asp-items="@(new SelectList(Model.r,"id","Name"))">
                            </select>

                        </div>
                    </div>
                </div>

                <div class="details ID">
                    <span class="title">Edu & Work Info</span>

                    <div class="fields">

                        <div class="input-field">
                            <label>Departement</label>
                            <select type="text" class="form-control" required name="dep_id" asp-items="@(new SelectList(Model.d,"id","DName"))">
                            </select>
                        </div>


                        <div class="input-field">
                            <label>Designation</label>
                            <select type="text" class="form-control" required name="designation_id" asp-items="@(new SelectList(Model.des,"id","Name"))">
                            </select>
                        </div>
                        <div class="input-field">
                            <label>DegreeTitle</label>
                            <input type="text" class="form-control" required name="DegreeTitle" placeholder="e.g:Masters">
                        </div>

                        <div class="input-field">
                            <label>TotalMarks</label>
                            <input type="text" class="form-control" required name="TotalMarks" placeholder="1100">
                        </div>

                         <div class="input-field">
                            <label>ObtainedMarks</label>
                            <input type="text" class="form-control" required name="ObtainedMarks" placeholder="900">
                        </div>

                        
                        <div class="input-field">
                            <label>Division</label>
                            <input type="text" class="form-control" required name="Division" placeholder="1st">
                        </div>

                        <div class="input-field">
                            <label>PassingYear</label>
                            <input type="text" class="form-control" required name="PassingYear" placeholder="2000">
                        </div>

                        <div class="input-field">
                            <label>Grade</label>
                            <input type="text" class="form-control" required name="Grade" placeholder="A+">
                        </div>

                        <div class="input-field">
                            <label>Specialization</label>
                            <input type="text" class="form-control" required name="Specialization" placeholder="None">
                        </div>

                        <div class="input-field">
                            <label>Institute</label>
                            <input type="text" class="form-control" required name="Institute" placeholder="Institute">
                        </div>

                        <div class="input-field">
                            <label>DegreeStatus</label>
                            <input type="text" class="form-control" required name="DegreeStatus" placeholder="Degree Status">
                        </div>

                        <div class="input-field">
                            <label>HighestDegree</label>
                            <input type="text" class="form-control" required name="HighestDegree" placeholder="PHD">
                        </div>                   

                    </div>
                       
                 </div>


                <div class="details ID">
                    <span class="title">Biometric</span>

                    <div class="fields">
                      
                      <div class="details ID">
                          <button type="button">
                              <span class="btn-info">Biometric</span>
                              <i class="visible"></i>
                          </button>

                      </div>


                    </div>



                    <div class="fields">

                      
                    </div>
					<button type="submit" class="submit-button">
						<span class="btnText">Submit</span>
						<i class="uil uil-navigator"></i>
					</button>
                </div>
            </div>
           

            
       </form>
    </div>

  
  
</body>
</html>
